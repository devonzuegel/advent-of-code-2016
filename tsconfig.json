{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "lib": ["es6", "dom"],
        "types": []
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
